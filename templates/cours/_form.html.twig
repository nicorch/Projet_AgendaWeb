<div class="container">
    {{ form_start(form) }}
    <div class="row">
        <div class="col-3">
            <div class="form-group">
                {{ form_label(form.matiere) }}
                {{ form_widget(form.matiere, {'attr': {'class': 'form-control'}}) }}
                <div class="text-danger">
                    {{ form_errors(form.matiere) }}
                </div>
            </div>
        </div>
        <div class="col-3">
            <div class="form-group">
                {{ form_label(form.professeur) }}
                {{ form_widget(form.professeur, {'attr': {'class': 'form-control'}}) }}
                <div class="text-danger">
                    {{ form_errors(form.professeur) }}
                </div>
            </div>
        </div>
        <div class="col-3">
            <div class="form-group">
                {{ form_label(form.type) }}
                {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
                <div class="text-danger">
                    {{ form_errors(form.type) }}
                </div>
            </div>
        </div>
        <div class="col-3">
            <div class="form-group">
                {{ form_label(form.salle) }}
                {{ form_widget(form.salle, {'attr': {'class': 'form-control'}}) }}
                <div class="text-danger">
                    {{ form_errors(form.salle) }}
                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="form-group row">
                <div class="col-12">
                    {{ form_label(form.dateHeureDebut) }}
                </div>
                <div class="col-5">
                    {{ form_widget(form.dateHeureDebut.date.day) }}
                    {{ form_widget(form.dateHeureDebut.date.month) }}
                    {{ form_widget(form.dateHeureDebut.date.year) }}
                </div>
                <div class="col-6">
                    à {{ form_widget(form.dateHeureDebut.time.hour) }}
                    {{ form_widget(form.dateHeureDebut.time.minute) }}
                </div>
                <div class="text-danger">
                    {{ form_errors(form.dateHeureDebut) }}
                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="form-group row">
                <div class="col-12">
                    {{ form_label(form.dateHeureFin) }}
                </div>
                <div class="col-5">
                    {{ form_widget(form.dateHeureFin.date.day) }}
                    {{ form_widget(form.dateHeureFin.date.month) }}
                    {{ form_widget(form.dateHeureFin.date.year) }}
                </div>
                <div class="col-6">
                    à {{ form_widget(form.dateHeureFin.time.hour) }}
                    {{ form_widget(form.dateHeureFin.time.minute) }}
                </div>
                <div class="text-danger">
                    {{ form_errors(form.dateHeureFin) }}
                </div>
            </div>
        </div>
    </div>



    {# <div class="form-group">
        {{ form_label(form.dateHeureFin) }}
        {{ form_widget(form.dateHeureFin, {'attr': {'class': 'form-control'}}) }}
        <div class="text-danger">
            {{ form_errors(form.dateHeureFin) }}
        </div>
    </div> #}
    {# {{ form_widget(form) }} #}
    <center>
        <button class="btn btn-primary">{{ button_label|default('Ajouter le cours') }}</button><br>
    </center>
    {{ form_end(form) }}
</div>